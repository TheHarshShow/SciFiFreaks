<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <%- include("partials/stylesheets.ejs") %>

    <title>Add Movie</title>
  </head>
  <body>

    <%- include("partials/navbar.ejs") %>

    <div class="container" style="margin: 25px auto">

      <h1 style="text-align:center">New TV Show!</h1>

      <div style="width:30%; margin: 25px auto">
        <form action="/post_tv_show" method="post" autocomplete="off">
          <div class="form-group">
            <input class="form-control"type="text" name="showName" placeholder="TV Show Name" required>
          </div>
          <div class="form-group">
            <input type="number" name="startyear" class="form-control" id="year" placeholder="Start Year" required></input>
          </div>
          <div class="form-group">
            <input type="checkbox" name="ongoing" id="cb1" onClick="ongoingCheck()" > <label for="cb1">Still ongoing?</label>
          </div>
          <div class="form-group">
            <input class="form-control" type="number" id="ey" name="endyear" id="cb1" placeholder="End Year" >
          </div>
          <div class="form-group">
            <textarea name="description" class="form-control" id="description" placeholder="Description..." required></textarea>
          </div>
          <div class="form-group">
            <input type="text" name="imageUrl" class="form-control" id="imageUrl" placeholder="Image Url" required></input>
          </div>

          <div class="form-group">
            <input class="btn btn-primary btn-default btn-block" type="submit">
          </div>
        </form>

      </div>


    </div>

    <%- include("partials/scripts.ejs") %>

    <script type="text/javascript">
      function ongoingCheck(){
        if(document.getElementById('cb1').checked){
          var tf = document.getElementById('ey');
          tf.value="";
          tf.disabled=true;
        } else {
          var tf = document.getElementById('ey');
          tf.value="";
          tf.disabled=false;
        }
      }
    </script>

  </body>
</html>
