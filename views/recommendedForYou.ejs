<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <%- include("partials/stylesheets.ejs") %>

    <title>Recommended For You</title>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <div class="jumbotron-fluid" style="background-image:url(/images/empty_space.png); border-radius:0; padding: 30px;">
      <div class="container">
        <div class="text-center">
          <h1 class="display-2" style="display:inline;color:white;">SciFi</h1><h1 class="display-2 font-weight-bold" style="display:inline;color:white;">Freaks</h1>
          <!-- <a href="/addMovie" class="btn btn-primary">Add Movie</a> -->
          <h4 style="color:white">Anything and everything SciFi</h4>
        </div>
      </div>
    </div>

    <div class="container">


    <% if (f){ %>
      <div class="text-center">
        <% if (movies.length > 0) { %>
        <h1 class="display-4">Recommended for You!</h1>
        <% } else { %>
        <h1>No Recommendations Available</h1>
        <% } %>
      </div>
    <% } %>

    <div class="container" style="margin-top:10px">
      <div class="row" style="display:flex; flex-wrap; wrap">

          <% movies.forEach(function(movie){ %>
            <div class="col-md-3 col-sm-6">
              <figure class="figure">
                <img src="<%= movie.imageUrl %>" class="img-thumbnail">
                <div class="caption text-center">
                  <a href="/m/<%= movie._id %>"><h5><%= movie.name %></h5></a>
                </div>
              </figure>
            </div>
          <% }) %>

      </div>

    </div>

    <%- include("partials/scripts.ejs") %>

  </body>
</html>
